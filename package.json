{
  "name": "nodejs-backend-setup",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "build:dev": "env-cmd -f .env.development npx tsc",
    "build:prod": "env-cmd -f .env.production npx tsc",
    "server:dev": "env-cmd -f .env.development nodemon src/index.ts",
    "server:prod": "env-cmd -f .env.production node dist/index.js",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format:check": "prettier --check",
    "format:write": "prettier --write",
    "migrate:dev": "env-cmd -f .env.development node script/migration.js",
    "migrate:prod": "env-cmd -f .env.production node script/migration.js",
    "prepare": "husky && husky install"
  },
  "lint-staged": {
    "{src,test,script}/**/*.{ts,js,json}": [
      "npm run format:write",
      "npm run lint:fix",
      "git add"
    ]
  },
  "author": "sajal",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^19.4.1",
    "@commitlint/config-conventional": "^19.4.1",
    "@eslint/js": "^9.9.1",
    "@types/cors": "^2.8.17",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.1",
    "@types/source-map-support": "^0.5.10",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.9",
    "nodemon": "^3.1.4",
    "prettier": "3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.3.0"
  },
  "dependencies": {
    "colorette": "^2.0.20",
    "cors": "^2.8.5",
    "env-cmd": "^10.1.0",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "mongoose": "^8.6.0",
    "source-map-support": "^0.5.21",
    "ts-migrate-mongoose": "^3.8.3",
    "winston": "^3.14.2",
    "winston-mongodb": "^5.1.1"
  }
}
